<div class="container">
    <h1>Hello</h1>
    <div class="row">
      <%= button_to "Add Transaction", new_entry_path, :method => :get %>
    </div>
    <div class="row">
      <h2>Latest Transactions</h2>

    </div>
    <div class="row">
      <table>
          <tr>
            <th>Receipt</th>
            <th>Date</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Options</th>
          </tr>
          <% latest_entries.each do |entry| %>
            <tr>
              <td><%= image_tag entry.receipt, class:"receipt_preview materialboxed"%></td>
              <td><%= entry.day %></td>
              <td> category</td>
              <td><%= entry.amount %></td>
              <td><%= link_to "Edit", edit_entry_path(entry), :method => :get %>
                  <%= link_to "Delete", entry_path(entry), :method => :delete, data: {confirm: "Are you sure you want to delete this transaction?"} %>
                  <%= link_to "view", entry_path(entry), :method => :get %>


              </td>
            </tr>
          <% end %>
        </table>
<% console %>
