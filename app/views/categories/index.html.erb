<div class="container">
  <h2>Categories</h2>
  <hr>
  <table>
    <table>
        <tr>
          <th>ID</th>
          <th>Category Name</th>
          <th>Options</th>
        </tr>
        <% @categories.each do |category| %>
          <tr>
            <td> <%= category.id %></td>
            <td> <%= category.name %></td>
            <td>
              <i class="material-icons">mode_edit</i><%= link_to "Edit", edit_category_path(category), :method => :get %>
              <i class="material-icons">delete</i><%= link_to "Delete", category_path(category), :method => :delete, data: {confirm: "Are you sure you want to delete this category?"} %>
            </td>
          </tr>
        <% end %>
  </table>
</div>
