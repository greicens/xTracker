<!-- ENTRY SHOW -->
<h1>ENTRY SHOW</h1>
<%= image_tag @entry.receipt %>
<h1>Date: <%= @entry.day.month %> / <%=@entry.day.day%> /<%= @entry.day.year %></h1>
<h2>Amount: <%= @entry.amount %></h2>
<h2>Payment Type: <%= @entry.payment_type %></h2>
<%= button_to "Edit", edit_entry_path(@entry), :method => :get, class:"btn" %>
    <%= button_to "Delete", entry_path(@entry), :method => :delete, data: {confirm: "Are you sure you want to delete this transaction?"}, class:"btn red" %>
