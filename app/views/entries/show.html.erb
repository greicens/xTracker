<!-- ENTRY SHOW -->
<div class="container">
  <div class="row receipt-details">
    <h2>Transaction Details</h2>
    <hr>
    <div class="col m2 s2">
      <%= image_tag @entry.receipt, id:"receipt" %>
    </div>
    <div class="col m10 s10">
      <div class="row">
        <div class="col m2 s2 right-align">
          <p>Date:</p>
        </div>
        <div class="col m4 s4">
          <p><%= @entry.day.month %> / <%=@entry.day.day%> /<%= @entry.day.year %></p>
        </div>
      </div>
      <div class="row">
        <div class="col m2 s3 right-align">
          <p>Amount:</p>
        </div>
        <div class="col m4 s4">
          <p><%= number_to_currency(@entry.amount) %></p>
        </div>
      </div>
      <div class="row">
        <div class="col m2 s3 right-align">
          <p>Payment Type:</p>
        </div>
        <div class="col m4 s4">
          <p><%= @entry.payment_type %></p>
        </div>
      </div>
      <div class="row">
        <div class="col m2 s3 right-align">
            <p>Vendor:</p>
        </div>
        <div class="col m4 s4">
          <p><%= @entry.vendor %></p>
        </div>
      </div>
      <div class="row">
        <div class="col m2 s3 right-align">
          <p>Notes</p>
        </div>
        <div class="col m4 s4">
          <%= @entry.notes %>
        </div>

      </div>
      <div class="row">
        <div class="col m3 s3">
          <%= button_to "Edit", edit_user_entry_path(current_user,@entry), :method => :get, class:"btn" %>
        </div>
        <div class="col m3 s3">
          <%= button_to "Delete", user_entry_path(current_user,@entry), :method => :delete, data: {confirm: "Are you sure you want to delete this transaction?"}, class:"btn red" %>

        </div>
      </div>
    </div>
    </div>

    </div>
</div>
