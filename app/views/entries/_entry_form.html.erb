<!-- FORM FOR ENTRY PARTIAL -->

  <%= form_for [@user, @entry]  do |f| %>
    </div>
    <div class="row">
      <div class="col s6">
        <%=f.label :date %>
        <%= f.date_field :day, class:"datepicker" %>
      </div>
      <div class="col s6">
        <%= f.text_field :category_id %>
      </div>
    </div>
    <div class="row">
      <div class="col s6">
        <%= f.label :payment_type %>
        <%= f.text_field :payment_type, placeholder: "e.g.: cash, card, check"%>
      </div>
      <div class="col s6">
        <%= f.label :vendor %>
        <%= f.text_field :vendor, placeholder: "Vendor", placeholder: "where did you buy this item?"%>
      </div>
    </div>
    <div class="row">
      <div class="col s6 m6">
        <%= f.label :amount %>
        <%= f.text_field :amount, placeholder: "e.g: 35.50 (no comas)" %>
      </div>
      <div class="col s6 m6">
        <%= f.label :notes%>
        <%= f.text_field :notes, placeholder: "Description of Transaction"%>
      </div>
    </div>
    <div class="row">
      <p><%= f.label :Upload_Receipt %></p>
      <%= f.file_field :receipt %>
    </div>
    <div class="row center-align">
      <%= f.submit "Submit", class:"btn" %>
    </div>
  <% end %>
