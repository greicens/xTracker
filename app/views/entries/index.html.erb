<!-- ENTRIES INDEX -->
<h1>ENTRIES INDEX</h1>
<table>
    <tr>
      <th>Receipt</th>
      <th>Date</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Options</th>
    </tr>
    <% current_user.entries.each do |entry| %>
      <tr>
        <td><%= image_tag entry.receipt, class:"receipt_preview materialboxed"%></td>
        <td><%= entry.day %></td>
        <td> category</td>
        <td><%= entry.amount %></td>
        <td><%= link_to "Edit", edit_entry_path(entry), :method => :get %>
            <%= link_to "Delete", entry_path(entry), :method => :delete, data: {confirm: "Are you sure you want to delete this transaction?"} %>
            <%= link_to "view", entry_path(entry), :method => :get %>


        </td>
      </tr>
    <% end %>
  </table>
