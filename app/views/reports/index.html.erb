<!-- REPORTS INDEX -->
  <div class="row ">
    <div class="col s1">

    </div>
    <div class="col s6">

    <h2>Search By Date</h2>
    <div class="range-query">
      <%= form_tag reports_path, method: :get do %>
        <div class="col s6 input-field">
          <%= label_tag "from" %>
          <%= text_field_tag 'search[date_from]', @search.date_from, type: "search" %>
        </div>
        <div class="col s6 input-field">
          <%= label_tag "to" %>
          <%= text_field_tag 'search[date_to]', @search.date_to, type: "search" %>
        </div>
        <%= submit_tag 'Search', class: 'btn' %>
      <% end %>
    </div>
  </div>

  </div>
  <div class="row">
    <div class="col s1">

    </div>
  <div class="col s7">

  <table>
      <tr>
        <th>Receipt</th>
        <th>Date</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Options</th>
      </tr>
      <% @entries.each do |entry| %>
        <tr>
          <td><%= image_tag entry.receipt, class:"receipt_preview materialboxed"%></td>
          <td><%= entry.day %></td>
          <td> category</td>
          <td><%= entry.amount %></td>
          <td><%= link_to "Edit", edit_entry_path(entry), :method => :get %>
              <%= link_to "Delete", entry_path(entry), :method => :delete, data: {confirm: "Are you sure you want to delete this transaction?"} %>
              <%= link_to "view", entry_path(entry), :method => :get %>


          </td>
        </tr>
      <% end %>
    </table>
  </div>
    <div class="col s4">
      <%= image_tag "arrow-graph.png", class:"graph" %>
    </div>
  </div>
